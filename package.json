{
  "name": "git-track",
  "displayName": "Git-Track",
  "description": "GitHub commit tracking and repository logging for VS Code.",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "SCM Providers",
    "Other"
  ],
  "extensionDependencies": [
    "vscode.git"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.showCommitDetails",
        "title": "Show Commit Details",
        "category": "Git-Track"
      },
      {
        "command": "extension.toggleCommitTracking",
        "title": "Toggle Commit Tracking",
        "category": "Git-Track"
      }
    ],
    "keybindings": [
      {
        "command": "extension.toggleCommitTracking",
        "key": "ctrl+alt+t",
        "mac": "cmd+alt+t",
        "when": "editorFocus"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^8.56.0"
  },
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "dotenv": "^16.4.7"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/akshit2941/git-track"
  },
  "keywords": [
    "github",
    "git",
    "commit tracking",
    "vscode",
    "logging",
    "repository",
    "version control"
  ],
  "author": "Akshit Saini",
  "license": "MIT",
  "homepage": "https://github.com/akshit2941/git-track"
}
